---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Sample portfolio data - in a real app, this would come from a CMS or API
const projects = [
  {
    id: 1,
    name: "Bella Vista Restaurant",
    description: "Modern restaurant website with online ordering and reservation system",
    url: "https://bellavista.example.com",
    image: "https://via.placeholder.com/600x400/667eea/ffffff?text=Bella+Vista+Restaurant",
    category: "Restaurant"
  },
  {
    id: 2,
    name: "TechStart Solutions",
    description: "Professional services website with client portal and project management",
    url: "https://techstart.example.com",
    image: "https://via.placeholder.com/600x400/764ba2/ffffff?text=TechStart+Solutions",
    category: "Professional Services"
  },
  {
    id: 3,
    name: "Green Thumb Garden Center",
    description: "E-commerce website for garden supplies with inventory management",
    url: "https://greenthumb.example.com",
    image: "https://via.placeholder.com/600x400/f093fb/ffffff?text=Green+Thumb+Garden",
    category: "E-commerce"
  },
  {
    id: 4,
    name: "Luxury Real Estate",
    description: "High-end real estate website with property listings and virtual tours",
    url: "https://luxuryrealestate.example.com",
    image: "https://via.placeholder.com/600x400/f5576c/ffffff?text=Luxury+Real+Estate",
    category: "Real Estate"
  },
  {
    id: 5,
    name: "Cozy Inn Hotel",
    description: "Hotel booking website with room availability and online reservations",
    url: "https://cozyinn.example.com",
    image: "https://via.placeholder.com/600x400/28a745/ffffff?text=Cozy+Inn+Hotel",
    category: "Hospitality"
  },
  {
    id: 6,
    name: "Fashion Forward Boutique",
    description: "Fashion retail website with size guides and wishlist functionality",
    url: "https://fashionforward.example.com",
    image: "https://via.placeholder.com/600x400/ffc107/ffffff?text=Fashion+Forward",
    category: "Retail"
  }
];
---

<Layout title="Portfolio - FutureClarity Technologies">
  <Header />
  
  <!-- Hero Section -->
  <section class="gradient-hero py-12 sm:py-16 lg:py-20 pt-20 sm:pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          Our <span class="gradient-text">Work</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          See how we've helped small businesses across different industries grow their online presence 
          with beautiful, functional websites and applications.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            Start Your Project
          </a>
          <a href="/" class="border-2 border-blue-500 text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-500 hover:text-white transition-all duration-300">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Grid -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">Featured Projects</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Each project is custom-built to meet our clients' specific needs and business goals.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl hover:-translate-y-2 transition-all duration-300 overflow-hidden group">
            <!-- Project Preview -->
            <div class="relative h-64 bg-gray-100 overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 flex items-center justify-center">
                <div class="text-center p-8">
                  <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">{project.name}</h3>
                  <p class="text-sm text-gray-600">{project.category}</p>
                </div>
              </div>
              
              <!-- Hover Overlay -->
              <div class="absolute inset-0 bg-gradient-to-r from-blue-500/90 to-purple-600/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <a 
                  href={project.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200"
                >
                  View Live Site
                </a>
              </div>
            </div>

            <!-- Project Info -->
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-xl font-bold text-gray-900">{project.name}</h3>
                <span class="px-3 py-1 bg-gradient-to-r from-blue-100 to-purple-100 text-blue-800 text-sm font-medium rounded-full">
                  {project.category}
                </span>
              </div>
              <p class="text-gray-600 mb-4">{project.description}</p>
              <div class="flex items-center justify-between">
                <a 
                  href={project.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200"
                >
                  Open Site
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
                <div class="flex space-x-2">
                  <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                  <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
                  <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">Ready to Start Your Project?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Let's discuss your vision and create something amazing together. 
          Every great project starts with a conversation.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/#contact" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            Get Started Today
          </a>
          <a href="/" class="border-2 border-gray-300 text-gray-700 px-8 py-4 rounded-lg text-lg font-semibold hover:border-blue-500 hover:text-blue-600 transition-all duration-300">
            Learn More About Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Overview -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">How We Build</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our proven process ensures every project is delivered on time, on budget, and exceeds expectations.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Discovery</h3>
          <p class="text-gray-600">We learn about your business, goals, and target audience to create the perfect solution.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Design</h3>
          <p class="text-gray-600">We create wireframes and designs that reflect your brand and engage your customers.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-pink-500 to-red-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Development</h3>
          <p class="text-gray-600">We build your project using modern technologies and best practices for performance.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">4</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Launch</h3>
          <p class="text-gray-600">We test thoroughly and launch your project, then provide ongoing support.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
