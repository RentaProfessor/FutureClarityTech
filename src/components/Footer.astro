---
// Footer component
---

<footer class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white safe-area-bottom mobile-footer-fix">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 mobile-container-padding">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 mobile-grid-1">
      <!-- Company Info -->
      <div class="col-span-1 sm:col-span-2 md:col-span-2 mobile-text-center sm:text-left">
        <h3 class="text-xl sm:text-2xl font-bold mb-3 sm:mb-4 mobile-text-center text-white">FutureClarity</h3>
        <p class="text-gray-200 mb-4 sm:mb-6 max-w-md mobile-text-center sm:text-left">
          Web development that just works. We build reliable, fast, and beautiful websites for small businesses.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="mobile-text-center sm:text-left">
        <h4 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4 mobile-text-center text-white">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="#services" class="text-gray-100 hover:text-white transition-colors duration-200 mobile-touch-action py-1 px-2 text-sm sm:text-base">Services</a></li>
          <li><a href="/portfolio" class="text-gray-100 hover:text-white transition-colors duration-200 mobile-touch-action py-1 px-2 text-sm sm:text-base">Portfolio</a></li>
          <li><a href="#process" class="text-gray-100 hover:text-white transition-colors duration-200 mobile-touch-action py-1 px-2 text-sm sm:text-base">Process</a></li>
          <li><a href="#about" class="text-gray-100 hover:text-white transition-colors duration-200 mobile-touch-action py-1 px-2 text-sm sm:text-base">About</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="mobile-text-center sm:text-left">
        <h4 class="text-base sm:text-lg font-semibold mb-3 sm:mb-4 mobile-text-center text-white">Contact</h4>
        <ul class="space-y-2 text-gray-100 text-sm sm:text-base">
          <li class="mobile-text-center sm:text-left">futureclaritytechnologies@gmail.com</li>
          <li class="mobile-text-center sm:text-left">+1 (818) 585-0475</li>
          <li class="mobile-text-center sm:text-left">Available 24/7</li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-600 mt-6 sm:mt-8 pt-4 sm:pt-8 text-center">
      <p class="text-sm sm:text-base mobile-text-center text-gray-100">&copy; {new Date().getFullYear()} FutureClarity Technologies LLC. All rights reserved.</p>
    </div>
  </div>
</footer>

<script>
  // Smart navigation for footer quick links: if not on main page, convert anchor links to scroll parameter links
  document.addEventListener('DOMContentLoaded', function() {
    const isMainPage = window.location.pathname === '/' || window.location.pathname === '/index.html';
    
    if (!isMainPage) {
      // Update footer quick links
      const footerLinks = document.querySelectorAll('footer a[href^="#"]');
      footerLinks.forEach(link => {
        const href = link.getAttribute('href');
        if (href && href !== '#') {
          link.setAttribute('href', `/?scroll=${href.substring(1)}`);
        }
      });
    }
  });
</script>
