---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Website demo data for iframe display
const websiteDemos = [
  {
    id: 1,
    name: "The White Squirrel",
    url: "https://www.thewhitesquirrelllc.com/",
    description: "Landing page for The White Squirrel, an Oberlin gift shop",
    type: "website"
  },
  {
    id: 2,
    name: "Captain Fripp's Lost Treasures",
    url: "https://apps.apple.com/us/app/captain-fripps-lost-treasures/id6752260563",
    description: "Custom recreational application for Fripp Island resort",
    type: "app"
  },
  {
    id: 3,
    name: "Demo Grill",
    url: "https://demo-grill.pages.dev/",
    description: "Professional restaurant website with integrated online ordering system",
    type: "website"
  },
  {
    id: 4,
    name: "Hollow Coffee",
    url: "https://coffee-web.pages.dev/",
    description: "Coffee shop website with menu and locations",
    type: "website"
  }
];
---

<Layout title="Portfolio - FutureClarity Technologies">
  <Header />
  
  <!-- Hero Section -->
  <section class="gradient-hero py-12 sm:py-16 lg:py-20 pt-20 sm:pt-24 mobile-hero-padding safe-area-top">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mobile-container-padding">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 mobile-text-center">
          Our <span class="gradient-text">Work</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto mb-6 sm:mb-8 mobile-text-center">
          See how we've helped small businesses across different industries grow their online presence 
          with beautiful, functional websites and applications.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mobile-flex-col">
          <a href="#contact" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-lg text-base sm:text-lg font-semibold hover:shadow-xl hover:-translate-y-1 transition-all duration-300 button-mobile mobile-touch-action min-h-[48px] flex items-center justify-center">
            Start Your Project
          </a>
          <a href="/" class="border-2 border-blue-500 text-blue-600 px-6 sm:px-8 py-3 sm:py-4 rounded-lg text-base sm:text-lg font-semibold hover:bg-blue-500 hover:text-white transition-all duration-300 button-mobile mobile-touch-action min-h-[48px] flex items-center justify-center">
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Website Demos Grid -->
  <section class="py-8 sm:py-12 lg:pt-1 lg:pb-20 bg-gray-50 mobile-section-padding">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mobile-container-padding">
      <div class="text-center mb-6 sm:mb-8 md:mb-4 mobile-mb-6">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4 mobile-text-center">Our Work & Website Demos</h2>
        <p class="text-base sm:text-lg text-gray-600 max-w-3xl mx-auto mobile-text-center">
          Featured client projects and demonstration websites showcasing our capabilities across different industries.
        </p>
      </div>

      <!-- 2x2 Grid Layout for demos -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mobile-grid-1">
        {websiteDemos.map((demo) => (
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden mobile-card-spacing">
            <!-- Simple Professional Header -->
            <div class="bg-white border-b border-gray-200 p-4 sm:p-6">
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-1 mobile-text-center">{demo.name}</h3>
              <p class="text-gray-600 text-sm sm:text-base mobile-text-center">{demo.description}</p>
            </div>
            
            {demo.type === "app" ? (
              <!-- App Display (Captain Fripp's) -->
              <div class="relative bg-gradient-to-br from-indigo-50 to-purple-50" style="padding-bottom: 75%; height: 0; overflow: hidden;">
                <div class="absolute inset-0 flex flex-col items-center justify-center p-6">
                  <!-- Larger App Icon -->
                  <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-3xl mb-4 shadow-lg overflow-hidden">
                    <img 
                      src="/captain-fripp-icon.png" 
                      alt="Captain Fripp's Lost Treasures App Icon"
                      class="w-full h-full object-cover"
                    />
                  </div>
                  <!-- App Store Badge -->
                  <div class="bg-black text-white px-4 py-2 rounded-lg text-sm font-semibold mb-2">
                    ðŸ“± Mobile App
                  </div>
                  <p class="text-gray-600 text-center text-sm">Adventure game available on iOS</p>
                </div>
                <!-- Clickable overlay for app -->
                <a 
                  href={demo.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="absolute inset-0 w-full h-full z-10 cursor-pointer"
                  title={`Download ${demo.name} app`}
                ></a>
              </div>
            ) : (
              <!-- Website iframe Container -->
              <div class="relative" style="padding-bottom: 75%; height: 0; overflow: hidden;">
                <iframe 
                  src={demo.url}
                  class="absolute top-0 left-0 w-full h-full border-0"
                  title={`${demo.name} Website Demo`}
                  loading="lazy"
                  sandbox="allow-scripts allow-same-origin allow-forms allow-popups allow-popups-to-escape-sandbox"
                  style="transform: scale(0.5); transform-origin: top left; width: 200%; height: 200%; pointer-events: none;"
                  scrolling="no"
                ></iframe>
                <!-- Clickable overlay -->
                <a 
                  href={demo.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="absolute inset-0 w-full h-full z-10 cursor-pointer"
                  title={`Visit ${demo.name} website`}
                ></a>
              </div>
            )}
            
            <!-- Demo Footer -->
            <div class="p-4 sm:p-6 bg-gray-50">
              <a 
                href={demo.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold hover:shadow-lg hover:-translate-y-1 transition-all duration-300 mobile-touch-action min-h-[44px]"
              >
                {demo.type === "app" ? "Download App" : "View Full Site"}
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white mobile-section-padding safe-area-bottom">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mobile-container-padding">
      <div class="text-center">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 sm:mb-6 mobile-text-center">Ready to Start Your Project?</h2>
        <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto mb-6 sm:mb-8 mobile-text-center">
          Let's discuss your vision and create something amazing together. 
          Every great project starts with a conversation.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mobile-flex-col">
          <a href="/#contact" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-lg text-base sm:text-lg font-semibold hover:shadow-xl hover:-translate-y-1 transition-all duration-300 button-mobile mobile-touch-action min-h-[48px] flex items-center justify-center">
            Get Started Today
          </a>
          <a href="/" class="border-2 border-gray-300 text-gray-700 px-6 sm:px-8 py-3 sm:py-4 rounded-lg text-base sm:text-lg font-semibold hover:border-blue-500 hover:text-blue-600 transition-all duration-300 button-mobile mobile-touch-action min-h-[48px] flex items-center justify-center">
            Learn More About Us
          </a>
        </div>
      </div>
    </div>
  </section>


  <Footer />
</Layout>
